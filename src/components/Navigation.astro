---
import Eroded from "../fonts/eroded.ttf";
---

<nav>
    <a href="/" class="logo">My Top Ten</a>
    <input class="menu-btn" type="checkbox" id="menu-btn" />
    <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>
    <ul class="menu">
        <li><a href="/create_account">Create Account</a></li>
        <li><a href="/login">Log In</a></li>
        <li class="logged-in"><a href="/account">My Account</a></li>
        <li class="logged-in"><a href="/playlist">My Songs</a></li>
        <li class="logged-in"><a href="/matches">My Matches</a></li>
        <li class="logged-in"><a href="#" id="signOut">Log Out</a></li>
    </ul>
</nav>


<style>
    ul {
        margin: 0;
        padding: 0;
        list-style: none;
        overflow: hidden;
    }
    li a {
        display: block;
        padding: 10px 20px;
        text-decoration: none;
        color: var(--background);
    }
    li a:hover,
        .menu-btn:hover {
        background-color: rgb(0, 0, 0, 0.9);
    }
    .logo {
        display: block;
        float: left;
        font-size: 2em;
        padding: 10px 20px;
        text-decoration: none;
        color: var(--background);
        font-family: "Special Elite", cursive;
    }
    .menu {
        clear: both;
        max-height: 0;
        transition: max-height 0.2s ease-out;
    }
    .menu-icon {
        cursor: pointer;
        display: inline-block;
        float: right;
        padding: 28px 20px;
        position: relative;
        user-select: none;
    }
    .menu-icon .navicon {
        background: var(--background);
        display: block;
        height: 2px;
        position: relative;
        transition: background 0.2s ease-out;
        width: 18px;
    }
    .menu-icon .navicon:before,
    .menu-icon .navicon:after {
        background: var(--background);
        content: "";
        display: block;
        height: 100%;
        position: absolute;
        transition: all 0.2s ease-out;
        width: 100%;
    }

    .menu-icon .navicon:before {
        top: 5px;
    }

    .menu-icon .navicon:after {
        top: -5px;
    }

    /* menu btn */

    .menu-btn {
        display: none;
    }

    .menu-btn:checked ~ .menu {
        max-height: 240px;
    }

    .menu-btn:checked ~ .menu-icon .navicon {
        background: transparent;
    }

    .menu-btn:checked ~ .menu-icon .navicon:before {
        transform: rotate(-45deg);
    }

    .menu-btn:checked ~ .menu-icon .navicon:after {
        transform: rotate(45deg);
    }

    .menu-btn:checked ~ .menu-icon:not(.steps) .navicon:before,
    .menu-btn:checked ~ .menu-icon:not(.steps) .navicon:after {
        top: 0;
    }


    @media (min-width: 48em) {
        li {
            float: left;
        }
        li a {
            padding: 20px 10px;
        }
        .menu {
            clear: none;
            float: right;
            max-height: none;
        }
        .menu-icon {
            display: none;
        }
    }

    nav {
        background-color: rgb(0, 0, 0, 0.5);
    }
</style>
