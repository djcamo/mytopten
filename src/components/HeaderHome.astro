---
import Nav from "../components/Navigation.astro";
---

<header class="flex-h">
    <Nav />
    <div class="flex">
        <div class="">
            <h1>Your  Life  In  10  Songs</h1>
        </div>
        <div>
            <a>Create Your Top 10</a>
        </div>
    </div>
</header>

<style>
    header {
        background-image: url("/images/home-bg.jpg");
        background-size: cover;
        box-shadow: 1px 1px 4px 0 rgba(0, 0, 0, 0.1);
        /* position: fixed; */
        width: 100%;
        z-index: 3;
    }
    header h1 {
        font-family: ""Special Elite"", cursive;
        font-size: 3rem;
        padding-bottom: 1rem;
        color: var(--background);
    }
    a{
        padding: 1rem;
        font-size: 1.5rem;
        background-color: var(--primary);
        border-radius: 0.35rem;
        text-shadow: 2px 2px 1px rgba(0, 0, 0, 0.2);
        cursor: pointer;
    }
    a:hover{
        background-color: var(--primary45);
        transition: all 0.5s ease-in-out;
    }
    .px-3 {
        padding: 0 2rem;
    }
    .white {
        color: white;
    }
    .flex {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 7rem 0;
        color: var(--background);
    }
    .flex-h {
        display: flex;
        flex-direction: column;
    }
    @media (max-width: 480px) {
        header h1 {
            font-size: 1.5rem;
        }
    }
    
</style>
