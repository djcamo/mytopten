---
interface Props {
title: string;
}

const { title } = Astro.props;

import Footer from '../components/Footer.astro';
import Header from '../components/HeaderHome.astro';
import GlobalStyles from '../components/GlobalStyles.astro';
import GlobalScripts from '../components/GlobalScripts.astro';

---

<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <title>
            {title}
        </title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Special+Elite&display=swap" rel="stylesheet">\
        <!-- font awesome -->
        <link rel="stylesheet" href="/css/all.min.css"  />
        <script is:inline src="/scripts/all.min.js"></script>
        <script is:inline src="https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2"></script>
        <GlobalStyles/>
    </head>
    <body>
        <div>
            <Header/>
            <main class="">
                <slot />
            </main>
            <Footer/>
        </div>
        <script is:inline src="/scripts/scripts.js"></script>
    </body>
</html>